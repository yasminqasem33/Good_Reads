<% include ../layout/header %>
<div>



  <a href="#First">Category</a>

  <a href="#Second">Books</a>

  <a href="#Third">Authors</a>

  <div class="myDiv" id="First" style="display:none">
    <button style=float:right>add</button>
    <table style="width:100%">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>
      <% categories.forEach((category) => { %>
        <tr>
            <td>
                <%=category._id %>
            </td>
            <td>
                <%= category.name %>
            </td>
            <td>
              <a href="#deletebook"> Delete</a>
              <a href="#editbook">Edit</a>
    
            </td>
        </tr>
        <% })%>
    </table>
  </div>

  <div class="myDiv" id="Second" style="display:none">
    <button style=float:right>add</button>
    <table style="width:100%">
      <tr>
        <th>ID</th>
        <th>Photo</th>
        <th>Name</th>
        <th>CategoryID</th>
        <th>AutherID</th>
        <th>Actions</th>
        </tr>
        
       
        <% books.forEach((book) => { %>
          <tr>
              <td>
                  <%= book._id %>
              </td>
              <td>
                  <%= book.image %>
              </td>
              <td>
                <%= book.name %>
            </td>
            <td>
              <%= book.categoryid %>
          </td>
          <td>
            <%= book.authorid %>
        </td>
              <td>
                <a href="#deletebook"> Delete</a>
                <a href="#editbook">Edit</a>
      
              </td>
          </tr>
          <% })%>
   
    </table>

  </div>

  <div class="myDiv" id="Third" style="display:none">
    <button style=float:right>add</button>
    <table style="width:100%">
      <tr>
        <th>ID</th>
        <th>Photo</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date of birth</th>
        <th>Actions</th>
      </tr>
    </tr>
    <% authors.forEach((author) => { %>
      <tr>
          <td>
              <%=author._id %>
          </td>
          <td>
              <%= author.first_name %>
          </td>
          <td>
            <%= author.last_name %>
        </td>
        <td>
          <%= author.photo %>
      </td>
      <td>
        <%= author.date_birth %>
    </td>
          <td>
            <a href="#deletebook"> Delete</a>
            <a href="#editbook">Edit</a>
  
          </td>
      </tr>
      <% })%>
    </table>
  </div>

  <style>
    .myDiv:target {

      display: block !important;

    }

    table,
    th,
    td {
      border: 1px solid black;
      border-collapse: collapse;
    }

    th,
    td {
      padding: 15px;
    }
  </style>
  <% include ../layout/footer %>
